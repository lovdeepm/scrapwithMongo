<div class="container">

    <div class="col-md-12 jumbotron">
        <div class="text-center">
            <h1> Saved Articles</h1>
        </div>
    </div>
    <div class="col-md-12">
        {{#if article}}
            {{#each article}}
                
    <div class="card" style="width: 60rem;">
      <div class="card-body">
        <h5 class="card-title">{{this.title}}</h5>
        <h6 class="card-subtitle mb-2 text-muted">
          <a href={{this.link}} target="_blank">{{this.title}}</a>
          <br>
             </h6>
        <p class="card-text">Summary: {{this.summary}}</p>
      </div>
      <div class="card-action deep-orange-text text-accent-3">
          <button type="button" class="btn btn-primary addNote" data-toggle="modal" data-target="#noteModal{{this._id}}" data-id={{this._id}}>View/Add Notes</button>
          <button type="button" class="btn btn-secondary delete" data-id={{this._id}}>Delete</button>
                    </div>
                </div>
            {{/each}}
        {{else}}
        <div class="panel panel-default">
            <div class="panel-body">
                <h4>You have no saved articles.</h4>
            </div>
        </div>
        {{/if}}
    </div>
</div>

<!-- Notes Modal-->
{{#each article}}
    {{> notes-modal }}
{{/each}}